exec_always --no-startup-id bash /home/swygax/.config/mytheme/config

# Define border size of windows
# Distance of borders
gaps inner 5
for_window [class=".*"] border pixel 2
#                       indicator         child_border      text  
client.focused          $primary-color    $primary-color    #ffffff $primary-color    $primary-color
client.focused_inactive $tertiary-color   $tertiary-color   #ffffff $tertiary-color   $tertiary-color
client.unfocused        $secondary-color  $secondary-color  #ffffff $secondary-color  $secondary-color
client.urgent           #ff0000           #ff0000           #ffffff #ff0000           #ff0000
client.placeholder      $primary-color    $primary-color    #ffffff $primary-color    $primary-color

# Shortcut for Change Layout of keyboard

# Portugues Brasil  

bindsym Mod4+Shift+p exec setxkbmap -layout br

# English US
bindsym Mod4+Shift+u exec setxkbmap -layout us
